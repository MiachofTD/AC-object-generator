{% extends 'layout' %}

{% import 'macros.form' as form %}

{% block title %}Armor{% endblock %}

{% block pageTitle %}Armor{% endblock %}

{% block content %}
    <form action="{{ route( 'json-object' ) }}" method="post">
        <div class="row">
            <div class="col-md-6">
                {{ form_label( 'type', 'Armor Type' ) }}
                {{ form_select( 'type', {
                    '': '-- Select One --',
                    'coat': 'Coat',
                }, old( 'type', '' ), { id: 'type', class: 'form-control', required: true } ) }}
            </div>
            <div class="col-md-6">
                {{ form_label( 'icon', 'Icon' ) }}
                <select name="did[8]" id="icon" class="form-control" required>
                    <option>-- Select One --</option>
                    {{ form.dropdown_options_category( 'icons.armor.coat', 'Coats' ) }}
                </select>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-6">
                {{ form_label( 'item-name', 'Item Name' ) }}
                {{ form_text( 'string[1]', old( 'string[1]', '' ), { id: 'item-name', class: 'form-control', required: true } ) }}
            </div>
            <div class="col-md-6">
                {{ form_label( 'additional-description', 'Additional Description' ) }}
                {{ form_text( 'string[16]', old( 'string[16]', '' ), { id: 'additional-description', class: 'form-control', required: true } ) }}
            </div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-md-6">
                {{ form_label( 'bonded', 'Bonded' ) }}&nbsp;&nbsp;&nbsp;
                {{ form_checkbox( 'int[33]', old( 'int[33]', '' ), false, { id: 'bonded', class: 'form-control', required: false } ) }}
            </div>
            <div class="col-md-6">
                {{ form_label( 'attuned', 'Attuned' ) }}&nbsp;&nbsp;&nbsp;
                {{ form_checkbox( 'int[114]', old( 'int[114]', '' ), false, { id: 'attuned', class: 'form-control', required: false } ) }}
            </div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-md-6">
                {{ form_label( 'burden-value', 'Burden Value' ) }}
                {{ form_number( 'int[5]', old( 'int[5]', '' ), { id: 'burden-value', class: 'form-control', required: true } ) }}
            </div>
            <div class="col-md-6">
                {{ form_label( 'amor-level', 'Armor Level' ) }}
                {{ form_number( 'int[28]', old( 'int[28]', '' ), { id: 'amor-level', class: 'form-control' } ) }}
            </div>
            <div class="col-md-6">&nbsp;</div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-md-6">
                <label for="material-type">Material Type</label>
                <select name="int[131]" class="form-control" id="mana-rate" required>
                    <option value="">-- Select One --</option>
                    {{ form.dropdown_options( 'material-type.metal' ) }}
                    {{ form.dropdown_options( 'material-type.leather' ) }}
                </select>
            </div>
            <div class="col-md-6">
                <label for="pallet-template">Pallet Template</label>
                <select name="int[3]" class="form-control" id="pallet-template">
                    <option value="">-- Select One --</option>
                    {{ form.dropdown_options( 'pallet-template' ) }}
                </select>
            </div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-md-6">
                {{ form_label( 'min-level', 'Player Min Level' ) }}
                {{ form_number( 'int[86]', old( 'int[86]', '' ), { id: 'min-level', class: 'form-control' } ) }}
            </div>
            <div class="col-md-6">
                {{ form_label( 'max-level', 'Player Max Level' ) }}
                {{ form_number( 'int[87]', old( 'int[87]', '' ), { id: 'min-level', class: 'form-control' } ) }}
            </div>
        </div>
        <hr />
        <div class="spells">
            <div class="row">
                <div class="col-md-4">
                    <h4>{{ form_label( 'creature-spells', 'Creature Spells' ) }}</h4>
                </div>
                <div class="col-md-4">
                    <h4>{{ form_label( 'item-spells', 'Item Spells' ) }}</h4>
                </div>
                <div class="col-md-4">
                    <h4>{{ form_label( 'life-spells', 'Life Spells' ) }}</h4>
                </div>
            </div>

            <div class="row spell">
                <div class="col-md-4">
                    <select name="spells[]" class="form-control" id="creature-spells">
                        <option value="">-- Select One --</option>
                        {{ form.dropdown_options_group( 'spells.creature' ) }}
                    </select>
                </div>
                <div class="col-md-4">
                    <select name="spells[]" class="form-control" id="item-spells">
                        <option value="">-- Select One --</option>
                        {{ form.dropdown_options_group( 'spells.item' ) }}
                    </select>
                </div>
                <div class="col-md-4">
                    <select name="spells[]" class="form-control" id="life-spells">
                        <option value="">-- Select One --</option>
                        {{ form.dropdown_options_group( 'spells.life' ) }}
                    </select>
                </div>
            </div>
            <div class="row">&nbsp;</div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <span class="btn btn-primary form-control add-item">Add More Spells</span>
            </div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="spell-requirements">
            <div class="row">
                <div class="col-md-6">
                    {{ form_label( 'current-mana', 'Current Mana Value' ) }}
                    {{ form_number( 'int[107]', old( 'int[107]', '' ), { id: 'current-mana', class: 'form-control' } ) }}
                </div>
                <div class="col-md-6">
                    {{ form_label( 'max-mana', 'Maximum Mana Value' ) }}
                    {{ form_number( 'int[108]', old( 'int[108]', '' ), { id: 'max-mana', class: 'form-control' } ) }}
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-4">
                {{ form_hidden( 'objectType', 'armor' ) }}
                {{ csrf_field() }}

                {{ form_label( 'submit', ' ' ) }}
                {{ form_submit( 'Generate JSON', { class: 'form-control btn btn-success', id: 'submit' } ) }}
            </div>
        </div>
    </form>
{% endblock %}

{% block footer_scripts %}
    {% include 'components.add-spells' %}
{% endblock %}
